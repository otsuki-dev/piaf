<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :birthdate, "Data de Nascimento" %>
    <%= f.date_select :birthdate %>
  </div>

  <div class="field">
    <%= f.label :ufrn_student, "É estudante da UFRN?" %>
    <%= f.check_box :ufrn_student, id: "ufrn_student_checkbox" %>
  </div>

  <div class="field" id="ufrn_registration_field">
    <%= f.label :ufrn_registration_number, "Matrícula da UFRN" %>
    <%= f.text_field :ufrn_registration_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const checkbox = document.getElementById("ufrn_student_checkbox");
    const registrationField = document.getElementById("ufrn_registration_field");

    function toggleRegistrationField() {
      if (checkbox.checked) {
        registrationField.style.display = "block";
      } else {
        registrationField.style.display = "none";
      }
    }

    checkbox.addEventListener("change", toggleRegistrationField);
    toggleRegistrationField();
  });
</script>